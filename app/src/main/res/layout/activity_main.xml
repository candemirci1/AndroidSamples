<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <EditText
        android:id="@+id/et_student_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_student_last_name"
        app:layout_constraintStart_toStartOf="parent"/>
    <EditText
        android:id="@+id/et_student_last_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_student_name"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/et_school_number"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="School Number"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/et_student_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/et_school_class"/>

    <EditText
        android:id="@+id/et_school_class"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Class"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/et_student_last_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_school_number"
        />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintTop_toBottomOf="@+id/et_school_class"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>